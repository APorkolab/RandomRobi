# ==============================================
# Random Robi Backend Environment Configuration
# ==============================================

# Application Settings
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=randomrobi_db
DB_USER=randomrobi_user
DB_PASSWORD=securepassword123
CREATE_TABLES=false

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-long-for-production
JWT_EXPIRES_IN=7d

# Admin User Configuration
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@randomrobi.com
ADMIN_PASSWORD=AdminPass123!

# External APIs
RANDOM_WORD_API_URL=https://random-word-api.herokuapp.com
YOUTUBE_BASE_URL=https://www.youtube.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:4200,http://localhost:3000

# Security
BCRYPT_ROUNDS=12
HELMET_ENABLED=true

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Application Settings
MAX_TRIES=5
RETRY_DELAY=2000

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHING=true

# ==============================================
# Production Environment Additional Variables
# ==============================================

# SSL/TLS (for production)
# SSL_CERT_PATH=/path/to/certificate.pem
# SSL_KEY_PATH=/path/to/private-key.pem

# Redis (if using Redis for caching)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

# Email Configuration (for notifications)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-email-password

# Monitoring
# SENTRY_DSN=your-sentry-dsn-url
# NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# CDN/Storage
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=randomrobi-assets
